<style>
  .navv{
    border: 1px white solid;
    color: white;
    border-radius: 8px;
    font-weight: 500;
  }
  .nav-link.active {
    color: rgb(0, 0, 0) !important;
    background-color: rgb(255, 255, 255);
  }
</style>
<header
  class="text-white"
  style="height: 10vh; background-color: rgb(109, 209, 235)">
  <div>
    <div class="d-flex flex-wrap align-items-center justify-content-between">
      <div class="d-inline-flex" style="align-items: center; margin: -12px 0">
        <a class="d-inline-flex align-items-center" href="#">
          <img src="imgs/logo2.svg" alt="Logo" class="d-inline-flex" />
        </a>
        <h3
          class="d-none d-md-block"
          style="margin-left: -20px; color: rgb(248, 248, 248)">
          message me
        </h3>
      </div>

      <div class="d-flex" style="margin-right: 60px; display: inline;">
        <a class=" nav-link navv <%= active === "login" ? "active" : null %>"  href="/" >Login</a>
        <a class=" nav-link navv <%= active === "signup" ? "active" : null %>" style="margin-left: 3vh ;" href="/signup" >Signup</a>
      </div>
    </div>
  </div>

  <script>
    // اختيار جميع الروابط داخل القائمة
    const navLinks = document.querySelectorAll(".nav-link");

    // إضافة حدث "click" لكل رابط
    navLinks.forEach(link => {
      link.addEventListener("click", function () {
        // إزالة كلاس "active" من جميع الروابط
        navLinks.forEach(nav => nav.classList.remove("active"));

        // إضافة كلاس "active" للرابط الذي تم النقر عليه
        this.classList.add("active");
      });
    });
  </script>
</header>
